<div class="breadcrumbs ">
	<div class="inner">
	    <div class="current-name">	
	       	<div class="container">  
		    	{% set last = breadcrumbs|length %}
		    	{% set i = 0 %}
		     	{% for breadcrumb, crumbInfo in breadcrumbs %}  
		      		{% set i = i + 1 %}	    
		      		{% if i == last  %} 
		        	{{ crumbInfo.text }}
		       	{% endif %}  
		    	{% endfor %}
		    </div>
		</div>
	    <ul class="breadcrumb">
	    	<div class="container">
		        {% for breadcrumb in breadcrumbs %}
		        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		        {% endfor %}
	        </div>
	    </ul>
    </div>
</div>
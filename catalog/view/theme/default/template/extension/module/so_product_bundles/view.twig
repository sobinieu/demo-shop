{{ header }}
{% if moduleData.ViewCustomCSS %} 
    <style>
        {{ moduleData.ViewCustomCSS|escape }}
    </style>
{% endif %} 

<div class="container">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        	<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %} 
    </ul>
    
	<h2 class="heading-title">{{ heading_title }}</h2>
	<div class="row">{{ column_left }}
        
        {% if column_left and column_right %} 
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %} 
            {% set class = 'col-sm-9' %}
        {% else %}   
            {% set class = 'col-sm-12' %} 
        {% endif %}
         
    	<div id="content" class="{{ class }}">{{ content_top }}
        	<div class="pbListing-content">
            	{% if bundle %} 
                	<div class="soproductbundles-wrap">
                        <div class="soproductbundles-content">
                        	<div class="soproductbundles-list-products">
                            	{% for product in bundle.products %}
                                    {% if not loop.first %}  
                                        <div class="soproductbundles-plus"><i class="fa fa-plus"></i></div>
                                    {% endif %} 
                                    <div class="product-layout">
                                        <div class="product-thumb transition">
                                            {% if product.quantity > '1' %} 
                                                <span class="pb_quantity">{{ product.quantity }}x</span>
                                            {% endif %} 
                                            {% if product.thumb %} 
                                                <div class="image">
                                                    <a href="{{ product.href }}"><img class="img-responsive" src="{{ product.thumb }}" alt="{{ product.name }}" /></a>
                                                </div>
                                            {% endif %}
                                        
                                            <div class="caption">
                                                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                                               <p class="price">
                                                    {% if product.price %} 
                                                        {% if not product.special %} 
                                                            {% set Pprice = product.price %}
                                                        {% else %}   
                                                            {% set Pprice = product.special %}
                                                        {% endif %} 
                                                    {% endif %}  
                                                    <strong>{{ Pprice }}</strong>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                
                                <div class="soproductbundles_info">
                                    <strong><span class="PB_bundle_total_price">{{ ProductBundles_BundlePrice }} {{ bundle.final_price }}</span></strong>
                                    <br />
                                    <strong><span>{{ ProductBundles_YouSave }} {{ bundle.discount_value }}!</span></strong>
                                    <br /><br />
                                    <center><a onClick="cart.addBundle({{ bundle.id }}, {{ bundle.product_options }});" id="ProductBundlesSubmitButton" class="btn btn-primary btn-lg btn-block"><i class="fa fa-shopping-cart"></i> {{ text_add_to_cart }}</a></center>
                                </div>
                        	</div>

                        	{% if moduleData.DescriptionViewEnabled and moduleData.DescriptionViewEnabled == 'yes' %}
                                <div class="bundle-list-description">
                                    {{ bundle.description }}
                                </div>

                                <div class="bundle-list-product-description">
                                    <ul class="nav nav-tabs">
                                        {% set x = 0 %}
                                        {% for product in bundle.products %} 
                                            <li class="{{ x == 0 ? 'active '}}"><a href="#tab-bundle-{{ bundle.id ~ '-' ~ product.product_id }}" data-toggle="tab">{{ product.name }}</a></li>
                                            {% set x = x + 1 %}
                                        {% endfor %}
                                    </ul>

                                    <div class="tab-content">
                                        {% set x = 0 %}
                                        {% for product in bundle.products %} 
                                            <div class="tab-pane {{ x == 0 ? 'active '}}" id="tab-bundle-{{ bundle.id ~ '-' ~ product.product_id }}">{{ product.description }}</div>
                                            {% set x = x + 1 %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                		</div>
            		</div> 
            	 {% endif %}
        	</div>
    	</div>
  		{{ content_bottom }}
	</div>
  	{{ column_right }}
</div>
<script type="text/javascript"><!--
    var cart = {
        'addBundle': function(bundle_id, options) {
            if (options) {
                $.fancybox.open({
                    href: 'index.php?route={{ modulePath }}/product_with_options&bundle_id=' + bundle_id,
                    type: 'ajax',
                    padding: 20,
                    openEffect: 'elastic',
                    openSpeed: 150,
                    fitToView: true,
                    closeBtn: true
                });
            } else {
                $.ajax({
                    url: 'index.php?route={{ modulePath }}/add&bundle_id=' + bundle_id,
                    type: 'POST',
                    dataType: 'json',
                    success: function(json) {
                        if (json['error']) {
                            alert("There is a problem with the form. Please try again later.");
                        }
                        if (json['success']) {
                            window.location = "{{ cart_url|escape }}";  
                        }
                    }
                });
            }
        }
    }
//--></script>


<script type="text/javascript">
function addBundleToCart(bundle_id, options) {
    if (options) {
        $.fancybox.open({
            href : 'index.php?route={{ modulePath }}/show_bundle_options&bundle_id=' + bundle_id,
            type : 'ajax',
            padding : 20,
            openEffect : 'elastic',
            openSpeed : 150,
            fitToView : true,
            closeBtn : true
        });
    } else {
        $.ajax({
            url: 'index.php?route={{ modulePath }}/add_bundle_to_cart&bundle_id=' + bundle_id,
            type: 'post',
            dataType: 'json',
            success: function(json) {
                if (json['error']) {
                    alert("There is a problem with the form. Please try again later.");
                }
                if (json['success']) {
                    window.location = "{{ cart_url|escape }}";	
                }
            }
        });
    }
}    
</script>
{{ footer }}

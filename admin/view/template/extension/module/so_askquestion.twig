{{ header }}{{ column_left }}
<div id="content">
  	<div class="page-header">
    	<div class="container-fluid">
      		<div class="pull-right">
      			<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i> {{ text_save }}</button>
      			<button type="submit" name="save_stay" value="1" form="form-module" data-toggle="tooltip" title="{{ text_save_stay }}" class="btn btn-success"><i class="fa fa-save"></i> {{ text_save_stay }}</button>
        		<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ text_cancel }}</a>
        	</div>
      		<h1>{{ heading_title }}</h1>
      		<ul class="breadcrumb">
        		{% for breadcrumb in breadcrumbs %}
        			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        		{% endfor %}
      		</ul>
    	</div>
  	</div>
  	
  	<div class="container-fluid">
    	{% if error_warning %}
    		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
    		</div>
    	{% endif %}
    	<div class="panel panel-default">
      		<div class="panel-heading">
        		<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_setting }}</h3>
      		</div>
      		<div class="panel-body">
      			<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
      				<div class="form-group">
		            	<label class="col-sm-3 control-label" for="input-module_status" data-toggle="tooltip" title="{{ entry_status_desc }}">{{ entry_status }}</label>
		            	<div class="col-sm-4">
		            		<select name="module_so_askquestion_status" id="input-show_button" class="form-control">
		            			{% if status %}
		                			<option value="1" selected="selected">{{ text_enabled }}</option>
		                			<option value="0">{{ text_disabled }}</option>
		                		{% else %}
		                			<option value="1">{{ text_enabled }}</option>
		                			<option value="0" selected="selected">{{ text_disabled }}</option>
		                		{% endif %}
		              		</select>
		            	</div>
		          	</div>
      				<div class="form-group">
	                	<label class="col-sm-3 control-label" for="input-button_name" data-toggle="tooltip" title="{{ entry_button_name }}">{{ entry_button_name }}</label>
	                	<div class="col-sm-4">
	                		{% for language in languages %}
		                		<div class="input-group">
		                			<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
	                  				<input type="text" name="module_so_askquestion_button_name[{{ language.language_id }}]" value="{% if button_name[language.language_id] %}{{ button_name[language.language_id] }}{% endif %}" placeholder="" id="input-button_name" class="form-control" />
	                  			</div>
                  			{% endfor %}
	                  	</div>
	              	</div>
	              	<div class="form-group">
		            	<label class="col-sm-3 control-label" for="input-show_button" data-toggle="tooltip" title="{{ entry_show_button_desc }}">{{ entry_show_button }}</label>
		            	<div class="col-sm-4">
		              		<select name="module_so_askquestion_show_button" id="input-show_button" class="form-control">
		              			{% if not show_button %}
		                			<option value="0" selected="selected">{{ text_always }}</option>
		                			<option value="1">{{ text_inventory }}</option>
		                		{% else %}
		                			<option value="0">{{ text_always }}</option>
		                			<option value="1" selected="selected">{{ text_inventory }}</option>
		                		{% endif %}
		              		</select>
		            	</div>
		          	</div>
	              	<div class="form-group">
		            	<label class="col-sm-3 control-label" for="input-disable_add_cart" data-toggle="tooltip" title="{{ entry_disable_add_cart_desc }}">{{ entry_disable_add_cart }}</label>
		            	<div class="col-sm-4">
		              		<select name="module_so_askquestion_disable_add_cart" id="input-disable_add_cart" class="form-control">
		              			{% if not disable_add_cart %}
		                			<option value="0" selected="selected">{{ text_hide_add_to_cart }}</option>
		                			<option value="1">{{ text_show_add_to_cart }}</option>
		                		{% else %}
		                			<option value="0">{{ text_hide_add_to_cart }}</option>
		                			<option value="1" selected="selected">{{ text_show_add_to_cart }}</option>
		                		{% endif %}
		              		</select>
		            	</div>
		          	</div>
		          	<div class="form-group">
		                <label class="col-sm-3 control-label" data-toggle="tooltip" title="{{ entry_show_category_desc }}">{{ entry_show_category }}</label>
		                <div class="col-sm-4">
		                  	<label class="radio-inline">
		                  		{% if show_category %}
		                    		<input type="radio" name="module_so_askquestion_show_category" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_category" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not show_category %}
		                    		<input type="radio" name="module_so_askquestion_show_category" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_category" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
		                </div>
	              	</div>
	              	<div class="form-group">
		                <label class="col-sm-3 control-label"></label>
		                <div class="col-sm-3"><b>{{ entry_show }}</b></div>
		                <div class="col-sm-3"><b>{{ entry_make_required }}</b></div>
	              	</div>
	              	<div class="form-group">
	              		<label class="col-sm-3 control-label" data-toggle="tooltip" title="{{ entry_show_required_name_desc }}">{{ entry_show_required_name }}</label>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if show_name %}
		                    		<input type="radio" name="module_so_askquestion_show_name" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_name" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not show_name %}
		                    		<input type="radio" name="module_so_askquestion_show_name" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_name" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if require_name %}
		                    		<input type="radio" name="module_so_askquestion_require_name" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_name" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not require_name %}
		                    		<input type="radio" name="module_so_askquestion_require_name" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_name" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              	</div>
	              	<div class="form-group">
	              		<label class="col-sm-3 control-label" data-toggle="tooltip" title="{{ entry_show_required_phone_desc }}">{{ entry_show_required_phone }}</label>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if show_phone %}
		                    		<input type="radio" name="module_so_askquestion_show_phone" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_phone" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not show_phone %}
		                    		<input type="radio" name="module_so_askquestion_show_phone" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_phone" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if require_phone %}
		                    		<input type="radio" name="module_so_askquestion_require_phone" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_phone" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not require_phone %}
		                    		<input type="radio" name="module_so_askquestion_require_phone" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_phone" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              	</div>
	              	<div class="form-group">
	              		<label class="col-sm-3 control-label" data-toggle="tooltip" title="{{ entry_show_required_question_desc }}">{{ entry_show_required_question }}</label>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if show_question %}
		                    		<input type="radio" name="module_so_askquestion_show_question" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_question" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not show_question %}
		                    		<input type="radio" name="module_so_askquestion_show_question" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_show_question" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              		<div class="col-sm-3">
	              			<label class="radio-inline">
		                  		{% if require_question %}
		                    		<input type="radio" name="module_so_askquestion_require_question" value="1" checked="checked" /> {{ text_yes }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_question" value="1" /> {{ text_yes }}
		                    	{% endif %}
		                    </label>
		                  	<label class="radio-inline">
		                  		{% if not require_question %}
		                    		<input type="radio" name="module_so_askquestion_require_question" value="0" checked="checked" /> {{ text_no }}
		                    	{% else %}
		                    		<input type="radio" name="module_so_askquestion_require_question" value="0" /> {{ text_no }}
		                    	{% endif %}
		                    </label>
	              		</div>
	              	</div>
	              	<div class="form-group">
	                	<label class="col-sm-3 control-label" for="input-add_email" data-toggle="tooltip" title="{{ entry_add_email_desc }}">{{ entry_add_email }}</label>
	                	<div class="col-sm-9">
                  			<input type="text" name="module_so_askquestion_add_email" value="{{ add_email }}" placeholder="" id="input-add_email" class="form-control" />
	                  	</div>
	              	</div>
      			</form>
      		</div>
      	</div>
  	</div>
</div>
{{ footer }}